<Manager>:
    One:
        id:one
        name:"one"
    Two:
        id:two
        name:"two"



<One>:
    MDFloatLayout:
        MDFloatLayout:
            id:back
            size_hint_y:.6
            pos_hint:{"center_y":1.8}
            radius:[0,0,0,40]
            canvas:
                Color:
                    rgb:(224/255,96/255,0/255,0.8/255)
                Rectangle:
                    size:self.size
                    pos:self.pos
        MDFloatLayout:
            id:back1
            size_hint_y:.6
            pos_hint:{"center_y":1.8}
            radius:[0,0,0,40]
            canvas:
                Color:
                    rgb:(224/255,96/255,0/255,0.8/255)
                Ellipse:
                    size:self.size
                    pos:self.pos
        MDIconButton:
            id:icon
            icon:"gamepad"
            pos_hint:{"center_x":0.5,"center_y":0.8}
            user_font_size: "60sp"
            theme_text_color: "Custom"
            text_color:1,1,1,1
        MDLabel:
            id:label
            text:"Game-Center"
            markup:True
            pos_hint:{"center_y":0.75}
            halign:"center"
            theme_text_color:"Custom"
            text_color:1,1,1,1
            font_style:"H5"
            opacity:0
        MDFillRoundFlatIconButton:
            id:btn
            opacity:0
            text:"Check"
            icon:"gamepad-circle"
            pos_hint:{"center_x":0.5,"center_y":0.4}
            size_hint_x:0.3
            bold:True
            on_press:
                root.manager.current = "two"
                root.manager.transition.direction = "up"
        MDBottomAppBar:
            MDToolbar:
                title:"Game-Center"
                type:"bottom"
                left_action_items:[["gamepad-variant"]]
                mode:"free-end"
                icon: 'language-python'
        MDLabel:
            id:txt
            text:"Check Games by its catagory"
            halign:"center"
            bold:True
            pos_hint:{"center_x":1.6}



<Two>:
    MDBottomNavigation:
        MDBottomNavigationItem:
            name:"home"
            text:"Home"
            icon:"home"
            MDToolbar:
                pos_hint:{"top":1}
                title:"Game-Center"
                elevation:20
                left_action_items:[["gamepad-round"]]
            MDSwiper:
                size_hint_y: 0.4
                md_bg_color:[1,0,0,1]
                pos_hint:{"top":0.85}
                MDSwiperItem:
                    FitImage:
                        source: "img/1.jpg"
                        radius: [20,]
                MDSwiperItem:
                    FitImage:
                        source: "img/2.jpg"
                        radius: [20,]
                MDSwiperItem:
                    FitImage:
                        source: "img/3.jpg"
                        radius: [20,]
                MDSwiperItem:
                    FitImage:
                        source: "img/4.jpeg"
                        radius: [20,]
                MDSwiperItem:
                    FitImage:
                        source: "img/6.jpg"
                        radius: [20,]
            GridLayout:
                cols:1
                pos_hint:{"top":0.4}
                GridLayout:
                    cols:2
                    SmartTileWithStar:
                        size_hint_y: None
                        height: "200dp"
                        stars: 5
                        source: "img/5.png"
        
        MDBottomNavigationItem:
            name:"Catagory"
            text:"Search"
            icon:"nintendo-game-boy"
            MDBoxLayout:
                orientation: 'vertical'
                MDToolbar:
                    pos_hint:{"top":1}
                    title:"Game-Center"
                    elevation:20
                    right_action_items:[["card-search",lambda x:app.get_game()]]
                MDTextField:
                    id:name
                    hint_text:"enter catagory"
                    pos_hint:{"center_x":0.5,"center_y":0.45}
                    mode:"rectangle"
                    size_hint_x:0.6
                    icon_right:"gamepad-circle-up"
                    icon_right_color: app.theme_cls.primary_color
                ScrollView:
                    MDList:
                        id:list

        MDBottomNavigationItem:
            name:"posters"
            text:"posters"
            icon:"file-image"
            MDBoxLayout:
                orientation: 'vertical'
                MDToolbar:
                    title:"Game-Center"
                    elevation:20
                    right_action_items:[["card-search",lambda x:app.poster()]]
                
                MDTextField:
                    id:new_name
                    hint_text:"enter catagory"
                    pos_hint:{"center_x":0.5,"center_y":0.45}
                    mode:"rectangle"
                    size_hint_x:0.6
                    icon_right:"gamepad-circle-up"
                    icon_right_color: app.theme_cls.primary_color
        
                ScrollView:
                    do_scroll_x:False
                    do_scroll_y:True
                    GridLayout:
                        id:grid
                        cols:1
                        padding: dp(4), dp(4)
                        spacing: dp(4)
                        size:(root.width,root.height)
                        #size_hint_x:None
                        size_hint_y:None
                        height:self.minimum_height
                        row_default_height:150

                            


